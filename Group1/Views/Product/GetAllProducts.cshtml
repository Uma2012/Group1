@model IEnumerable<Group1.Web.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="card-deck" style="justify-content: center">
        @foreach (var item in Model)
        {
            <div class="card" style="min-width: 250px; max-width: 250px; margin:5px;">
                <a asp-controller="Product" asp-action="GetOneProduct" asp-route-productid="@item.Id"><img class="card-img-top" src="@Url.Content(item.ImageUrl)" alt="@item.Name" style="height:230px;"></a>
                <div class="card-body text-center">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">@item.Price SEK</p>
                    <a asp-controller="Product" asp-action="GetOneProduct" asp-route-productid="@item.Id">Go to product</a>
                    <br />
                    <br />
                    <input type="submit" value="Buy" class="btn btn-primary" asp-action="AddToCart" asp-controller="Shoppingcart">
                </div>
            </div>
        }
    </div>
</form>
