@model IEnumerable<Group1.Web.Models.Order>

@{
    ViewData["Title"] = "GetAllOrder";
}

<h1>GetAllOrder</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <p>OrderId</p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.PaymentId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DeliveryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliverd)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostalCode)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <form method="post">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.PaymentId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryId)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Deliverd)*@
                        <div >
                            
                                @Html.DropDownList("Deliverystatus", new List<SelectListItem>
                       {
                           new SelectListItem {Text="Yes", Value="true"},
                           new SelectListItem {Text="No", Value="false", Selected=true}
                       })
                            
                        </div>
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <input type="submit" value="Update" class="btn btn-primary" asp-action="UpdateDeliveryStatus" asp-controller="Order" asp-route-orderId="" />
                        <input type="submit" value="Delete" class="btn btn-danger" asp-action="DeleteOrder" asp-controller="Order" asp-route-orderId="@item.Id" />
                    </td>
                </tr>
            }
    </form>
    </tbody>
</table>
