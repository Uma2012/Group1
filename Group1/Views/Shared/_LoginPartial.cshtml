@using Microsoft.AspNetCore.Identity
@inject SignInManager<Group1.Web.Models.CustomUser> SignInManager
@inject UserManager<Group1.Web.Models.CustomUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <button class="btn btn-dark" type="button" onclick="window.location= '@Url.Action( "GetCartContent", "ShoppingCart")'">
                <i class="fas fa-shopping-cart">&nbsp <span id="cart-amount" class="badge badge-pill badge-light"></span></i>
            </button>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
